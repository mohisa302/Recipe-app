<div class="recipes-container">
  <% if recipes.empty? %>
  <h2>Please add some recipes</h2>
  <button class="page-btn">
        <%= link_to 'Create New Recipe',  new_user_recipe_path(user_id:user.id), style: 'color: black; text-decoration: none;' %>
    </button>
  <% else %>
  <ul class="recipes-list">
    <% recipes.each do |recipe|%>
    <li class="recipes-list-item">
      <%= link_to user_recipe_path(user_id: user.id,id: recipe.id) do %>
      <div class="recipe-items-details">
          <h2><%= recipe.name%></h2>
          <p><%= recipe.description %></p>
      </div>
      <% end %> 
      <% if recipe.owner?(user) %>
      <%= link_to user_recipe_path(user_id:user.id,id:recipe.id), data: {turbo_method: :delete} do %>
      <button>Remove</button>
      <% end %>
      <% end %>
    </li>
    <% end %> <% end %>
  </ul>
  <button class="page-btn">
        <%= link_to 'Create New Recipes', new_user_recipe_path(user_id:user.id), style: 'color: black; text-decoration: none;' %>
    </button>
</div>